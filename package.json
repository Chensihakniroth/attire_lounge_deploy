{
    "private": true,
    "scripts": {
        "dev": "concurrently \"npm run dev:css\" \"npm run dev:js\"",
        "dev:css": "tailwindcss -i ./resources/css/app.css -o ./public/css/app.css --watch",
        "dev:js": "esbuild resources/js/app.jsx --bundle --outfile=public/js/app.js --watch",
        "build": "npm run build:css && npm run build:js",
        "build:css": "tailwindcss -i ./resources/css/app.css -o ./public/css/app.css --minify",
        "build:js": "esbuild resources/js/app.jsx --bundle --minify --outfile=public/js/app.js",
        "start": "npm run dev"
    },
    "devDependencies": {
        "@headlessui/react": "^1.7.17",
        "@heroicons/react": "^2.0.18",
        "@tailwindcss/forms": "^0.5.7",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "esbuild": "^0.19.12",
        "framer-motion": "^10.16.16",
        "lucide-react": "^0.309.0",
        "postcss": "^8.4.32",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.20.1",
        "tailwindcss": "^3.3.6"
    }
}
